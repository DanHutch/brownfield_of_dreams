<section class="dashboard-main">
  <h1> <%= @facade.user_firstname %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= @facade.user_name  %> </li>
    <li> <%= @facade.user_email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
  <%if @facade.user.github_key != nil %>
    <section class="github">
      <h2>Github</h2>
      <% if @facade.repos != nil %>
        <section class="repos">
          <h1>Repos</h1>
            <% @facade.repos.each do |repo| %>
              <div class="repo">
                <div class="repo-name"><%= link_to repo.name, repo.url%></div>
              </div>
            <%end%>
        </section>
      <% end %>
      <% if @facade.followers != nil %>
        <section class="followers">
          <h1>Followers</h1>
            <% @facade.followers.each do |follower| %>
              <div class="follower">
                <div class="follower-name"><%= link_to follower.name, follower.url%></div>
              </div>
            <%end%>
        </section>
      <% end %>
    </section>
  <%end%>
</section>
